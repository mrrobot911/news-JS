{
  "compilerOptions": {
    "module": "es2015",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    // Strict Checks
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
